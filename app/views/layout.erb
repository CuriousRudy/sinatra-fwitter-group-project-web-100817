<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Fwitter</title>
  </head>
  <body>
    <nav>
      <ul>
        <% if logged_in? %>
          <li><a href="/">Home</a></li>
          <li><a href="/tweets/new">New Tweet</a></li>
          <li><a href="/users/<%=session[:user_id]%>">Your profile</a></li>
          <li><a href="/logout">Logout</a></li>
        <%else %>
          <li><a href="/">Home</a></li>
          <li><a href="/users/login">Login</a></li>
          <li><a href="/users/signup">Sign Up</a></li>
        <%end%>
      </ul>
    </nav>

    <%= yield %>
  </body>
</html>
